
<% include ./partials/header %>

    <!-- Page Content -->
    <section class="py-5">
      <div class="container">
        <h1>Create Meetup</h1>
        <div class="meetup-form">
            <form action="/createmeetup" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="group">Group</label>
                  <input type="text" class="form-control" name="group" placeholder="Group" required>
                </div>
                <div class="form-group">
                  <label for="theme">Topic</label>
                  <input type="text" class="form-control" name="topic" placeholder="Topic" required>
                </div>
                <div class="form-group">
                  <label for="venue">Venue</label>
                  <input type="text" class="form-control" name="venue" placeholder="Venue" required>
                </div>
                <div class="form-group">
                  <label for="time">Time</label>
                  <input type="datetime-local" class="form-control" name="time" placeholder="Time" required>
                </div>
                <div class="form-group">
                  <label for="image">Meetup Image</label>
                  <input type="file" id="image" name="image" class="form-control-file" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <% include ./partials/footer %>
